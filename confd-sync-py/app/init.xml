<sys xmlns="http://example.com/router">
  <interfaces>
    <interface>
      <name>eth0</name>
      <unit>
        <name>0</name>
        <enabled>true</enabled>
        <family>
          <inet>
            <address>
              <name>192.168.1.2</name>
              <prefix-length>16</prefix-length>
            </address>
          </inet>
        </family>
      </unit>
      <unit>
        <name>1</name>
