  <syslog>
    <server>
      <name>10.3.4.5</name>
      <enabled>true</enabled>
      <selector>
        <name>8</name>
        <facility>auth</facility>
        <facility>authpriv</facility>
        <facility>local0</facility>
      </selector>
      <administrator>Joe Smith</administrator>
    </server>
  </syslog>
  <ntp>
    <server>
      <name>10.2.3.4</name>
      <key>2</key>
    </server>
    <local-clock>
      <enabled>true</enabled>
      <stratum>15</stratum>
      <status>
        <state>falsetick</state>
        <stratum>4</stratum>
        <reach>test</reach>
        <delay>1</delay>
        <offset>3</offset>
        <jitter>2</jitter>
      </status>
    </local-clock>
    <restrict>
      <name>1.1.1.1</name>
      <mask>default</mask>
      <flag>ntpport</flag>
    </restrict>
    <key>
      <name>2</name>
    </key>
